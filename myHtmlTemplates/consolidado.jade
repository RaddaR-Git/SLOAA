  head
    title #{title} Reporte
    link(rel='stylesheet', href='/stylesheets/style.css')
    -var numberFormat=function(currentNumber){return new Intl.NumberFormat('en-US', {maximumFractionDigits: 10}).format(currentNumber);};
  body
  
    -for (var reporte in reportes) {
    -reporteEnCurso = reportes[reporte];
    -ordenesServicio = reporteEnCurso.ordenesServicio;
    
    -totBruto = reporteEnCurso.totCotizado - reporteEnCurso.totDeduccion;
    -totBrutoRet4=reporteEnCurso.totRetenido4;
    -totBrutoIva=reporteEnCurso.totIva;

    .container
    div
        table(cellspacing="5" width='100%')
            tr
