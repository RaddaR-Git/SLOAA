            tr
                td(align="center")
                    p ADMINISTRACION GENERAL DE RECURSOS Y SERVICIOS
                    p ADMINISTRACION CENTRAL DE DESTINO DE BIENES
                    p ADMINISTRACION DE DESTINO DE BIENES "2"
