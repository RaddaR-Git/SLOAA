            br
            br
            table(border="1" width="100%" style="font-size:8px; border-collapse: collapse;")
                tr
                    td(rowspan="2") No. de Prefactura
                    td(colspan="2") Fecha de Servicios solicitados
                    td(rowspan="2") Unidad Administrativa Requiriente
                    td(rowspan="2") Tipo de Servicio
                    td(rowspan="2") Cantidad
                    td(rowspan="2") Unidad
                    td(rowspan="2") Cotizacion
                    td(rowspan="2") Deduccion
                    td(rowspan="2") Importe parcial sin IVA
                    td(rowspan="2") Costo por Factura
                tr
                    td Del
                    td Al
                -for (var ordenServicio in ordenesServicio) {
                -ordenServicioEnCurso = ordenesServicio[ordenServicio];
                -servicios = ordenServicioEnCurso.servicios;
                -for (var servicio in servicios) {
                -servicioEnCurso = servicios[servicio];
                tr
                    td #{servicioEnCurso.llaveOrdenMensual}
                    td #{servicioEnCurso.fechaSolicitudDeFormat}
                    td #{servicioEnCurso.fechaSolicitudHastaFormat}
                    td #{servicioEnCurso.nombreDeAutoridad}
                    td #{servicioEnCurso.nombreServicio}
                    td #{servicioEnCurso.unidad}
                    td #{servicioEnCurso.cantidad}
                    td #{numberFormat(servicioEnCurso.cotizacion)}
                    td #{numberFormat(servicioEnCurso.deduccion)}
                    td #{numberFormat(servicioEnCurso.totSIva)}
                    td #{numberFormat(servicioEnCurso.totSIva)}
                -}
                -}
                tr
                    td(colspan="9" rowspan="6")
                    td Subtotal antes de deductiva
                    td #{numberFormat(reporteEnCurso.totCotizado)}
                tr
                    td Deductiva
                    td #{numberFormat(reporteEnCurso.totDeduccion)}
                tr
                    td Subtotal Despues
                    td #{numberFormat(totBruto)}
                tr
                    td IVA
                    td #{numberFormat(totBrutoIva)}
                tr
                    td RETENCION 4%
                    td #{numberFormat(totBrutoRet4)}
                tr
                    td GRAN TOTAL NETO
                    td #{numberFormat((totBruto + totBrutoIva) - totBrutoRet4)}
            div &nbsp;
    .container
    h3
    table(width="100%" border="1"  style="font-size:9px; border-collapse: collapse;")
        tr
            td(width="200") Nombre/Puesto
