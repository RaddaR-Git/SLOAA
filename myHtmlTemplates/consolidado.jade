                            td(align="center" colspan="1") Entidad Federativa
                        tr
                            td(align="center" colspan="3") &nbsp;
                        tr
                            td(align="center" colspan="2") #{reporteEnCurso.rfc}
                            td(align="center" colspan="1")  #{reporteEnCurso.telefono}
                        tr
                            td(align="center" colspan="2") Registro Federal de Contribuyentes
                            td(align="center" colspan="1") Telefono

                td(align="center" valign="top")
                    table(border=1 cellspacing="5" width='80%' style='border-collapse: collapse;')
                        tr
                            td(align="center" colspan="3") Datos de Reporte
                        tr
                            td(align="center" colspan="1") Contrato
                            td(align="center" colspan="2")  #{reporteEnCurso.contrato}
                        tr
                            td(align="center" colspan="1") Partida Unica
                            td(align="center" colspan="1")  #{reporteEnCurso.idPartida}
                            td(align="center" colspan="1")  #{reporteEnCurso.partida}
