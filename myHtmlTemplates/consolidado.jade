    div &nbsp;
    div &nbsp;
    div &nbsp;
    div &nbsp;            
    .container
        table(border="0" cellspacing="5" width='100%' style="font-size:8px;")
            tr
                td(align="center" valign="top")
                    table(border=1 cellspacing="5" width='80%' style='border-collapse: collapse;')
                        tr
                            td(align="center" colspan="3") Datos Provedor
                        tr
                            td(align="center" colspan="3") Nombre o Razon Social
                        tr
                            td(align="center" colspan="3") #{reporteEnCurso.razonSocial}
                        tr
                            td(align="center" colspan="3") &nbsp;
                        tr
                            td(align="center" colspan="3") Domicilio
                        tr
                            td(align="center" colspan="2") #{reporteEnCurso.calle}
                            td(align="center" colspan="1") #{reporteEnCurso.numero}
                        tr
                            td(align="center" colspan="2") Calle
                            td(align="center" colspan="1") Numero
                        tr
                            td(align="center" colspan="3") #{reporteEnCurso.colonia}
                        tr
                            td(align="center" colspan="3") Colonia
                        tr
